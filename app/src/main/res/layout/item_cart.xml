<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_0_5"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/grid_1"
        android:gravity="center_vertical">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/image_view_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/blank"
            android:scaleType="centerCrop"
            tools:src="@drawable/food" />

        <!-- Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/grid_1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Kichri"
                android:textAppearance="?attr/textAppearanceBodyLarge" />

            <TextView
                android:id="@+id/text_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹100"
                android:textAppearance="?attr/textAppearanceTitleSmall" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_0_5"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/button_decrease_quantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/blank"
                    android:src="@drawable/baseline_remove_24" />

                <TextView
                    android:id="@+id/text_view_quantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="1"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <ImageButton
                    android:id="@+id/button_increase_quantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/blank"
                    android:src="@drawable/baseline_add_24" />

            </LinearLayout>
        </LinearLayout>

        <!-- Remove Button -->
        <ImageButton
            android:id="@+id/button_remove_from_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/blank"
            android:src="@drawable/baseline_delete_24"
            app:tint="@android:color/holo_red_dark" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
