<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BiteBuddy" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">?attr/colorSurface</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/orange_light</item>
        <item name="colorSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_dark</item>
        <item name="colorSecondaryVariant">@color/orange_deep</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/orange_pale</item>
        <item name="colorOnSecondaryContainer">@color/orange_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>


</resources>